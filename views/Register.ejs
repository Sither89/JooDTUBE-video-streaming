    <body>
        
        <div class="TabBar">
            <header> 
                <div class="logo">
                    <a href="/" id="logo"><img href="/" src="https://media.discordapp.net/attachments/1013480789062713488/1022162140867596410/unknown.png"   width="150" height="50"></a>
                  </div>
            </form> 
                <nav>
                    <ul class="nav_links">
